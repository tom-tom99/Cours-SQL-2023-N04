CREATE TABLE ARTICLE (
    ID INT(6) AUTO_INCREMENT PRIMARY KEY,
    REF VARCHAR(30),
    DESIGNATION VARCHAR(30),
    PRIX DECIMAL(8,2),
    ID_FOU INT(6) NOT NULL       
	);

CREATE TABLE FOURNISSEUR (
    ID INT(6) AUTO_INCREMENT PRIMARY KEY,
    NOM VARCHAR(30)    
	);

CREATE TABLE BON(
    ID INT(6) AUTO_INCREMENT PRIMARY KEY,
    NUMERO INT(10),
    DATE_CMD DATETIME,
    DELAI DATETIME,
    ID_FOU INT(6) NOT NULL       
	);

CREATE TABLE COMPO (
    ID INT(6) AUTO_INCREMENT PRIMARY KEY,
    QTE INT(6) NOT NULL,
    ID_ART INT(6) NOT NULL,
    ID_BON INT(6) NOT NULL       
	);
