CREATE DATABASE compta;
CREATE TABLE ARTICLE(
    ID INT (10) PRIMARY KEY,
    REF VARCHAR(30),
    DESIGNATION VARCHAR(255),
    PRIX DECIMAL(8,2),
    ID_FOU INT (10)
    );
CREATE TABLE FOURNISSEUR(
    ID INT(10) PRIMARY KEY,
    NOM VARCHAR(255)
    );
CREATE TABLE BON(
    ID INT (10) PRIMARY KEY,
    NUMERO VARCHAR(100),
    DATE_CMDE DATETIME,
    DELAI TIME,
    ID_FOU INT (10)
    );
CREATE TABLE COMPO(
    ID INT(10) PRIMARY KEY AUTO_INCREMENT,
    QTE INT(10),
    ID_ART INT(10),
    ID_BON INT(10)
    );
